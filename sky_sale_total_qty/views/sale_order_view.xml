<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_order_form" model="ir.ui.view">
        <field name="name">inherit.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_uom_qty']" position="attributes">
                <attribute name="sum">product_uom_qty</attribute>
            </xpath>
            <xpath expr="//field[@name='tax_totals_json']" position="before">
                <field name="prepaid_shipping" class="oe_inline oe_right" readonly="0"/>
            </xpath>
        </field>
    </record>
</odoo>
