<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="inherit_view_move_form" model="ir.ui.view">
        <field name="name">inherit.view.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='quantity']" position="replace">
                <field name="quantity" sum="quantity" invisible="context.get('default_move_type') not in ('in_invoice', 'out_invoice')"/>
                <field name="quantity" invisible="context.get('default_move_type') in ('in_invoice', 'out_invoice')"/>
            </xpath>
        </field>
    </record>
</odoo>