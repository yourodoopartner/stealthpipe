<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="inherit_purchase_order_form" model="ir.ui.view">
        <field name="name">inherit.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_qty']" position="attributes">
                <attribute name="sum">product_qty</attribute>
            </xpath>
        </field>
    </record>
</odoo>