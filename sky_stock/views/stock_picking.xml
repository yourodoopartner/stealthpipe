<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="bill_of_lading" readonly="1"
                           attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                </xpath>
                <xpath expr="//form/header" position="inside">
                    <button name="%(action_report_bill_of_lading)d" type="action" string="Bill of Lading"
                            attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                </xpath>

                <xpath expr="//button[@name='button_validate'][1]" position="attributes">
                    <attribute name="context">{'landed_cost': True}</attribute>
                </xpath>
                <xpath expr="//button[@name='button_validate'][2]" position="attributes">
                    <attribute name="context">{'landed_cost': True}</attribute>
                </xpath>

                <xpath expr="//field[@name='move_ids_without_package']/tree" position="inside">
                    <field name="landed_cost" readonly="1" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                    <field name="price_unit" string="Product Cost" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                    <field name="total_landed_cost" readonly="1" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']/form" position="inside">
                    <field name="landed_cost" readonly="1" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                    <field name="total_landed_cost" readonly="1" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                </xpath>
                <xpath expr="//page[@name='operations']" position="inside">
                    <group class="oe_subtotal_footer oe_right">
                        <button colspan="2" name="compute_landed_cost_amount" string="Compute" type="object"
                                class="oe_right btn-secondary"/>
                    </group>
                </xpath>

                <xpath expr="/form/header" position="inside">
                    <button name="%(action_landed_cost_wiz)d"
                            type="action"
                            string="Add Landed Cost" class="btn-primary"
                            attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                </xpath>
                <xpath expr="//page[@name='note']" position="after">
                    <page string="Landed Cost" name="landed_cost"
                          attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}">
                        <field name="landed_cost_ids" nolabel="1">
                            <tree create="false" editable="bottom">
                                <field name="product_id" domain="[('landed_cost_ok', '=', True)]"/>
                                <field name="account_id" options="{'no_create': True}"/>
                                <field name="split_method"/>
                                <field name="amount"/>
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="product_id" domain="[('landed_cost_ok', '=', True)]"/>
                                        <field name="account_id" options="{'no_create': True}"/>
                                        <field name="split_method"/>
                                        <field name="amount"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>