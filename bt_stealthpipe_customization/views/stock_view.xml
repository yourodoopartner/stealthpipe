<odoo>
    <record id="view_stock_quant_tree_editable_inherited" model="ir.ui.view">
        <field name="name">stock.quant.form.inh</field>
        <field name="model">stock.quant</field>
        <field name="type">tree</field>
	    <field name="priority">99</field>
	    <field name="mode">extension</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='available_quantity']" position="after">
                <field name="diameter"/>
            </xpath>
   		</field>
   	</record>
    <record id="view_stock_move_line_tree_editable_inherited" model="ir.ui.view">
        <field name="name">stock.move.line.form.inh</field>
        <field name="model">stock.move.line</field>
        <field name="type">tree</field>
        <field name="priority">99</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_done']" position="after">
                <field name="diameter"/>
            </xpath>
        </field>
    </record>
    <record id="view_stock_valuation_layer_tree_editable_inherited" model="ir.ui.view">
        <field name="name">stock.valuation.layer.form.inh</field>
        <field name="model">stock.valuation.layer</field>
        <field name="type">tree</field>
        <field name="priority">99</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quantity']" position="after">
                <field name="diameter"/>
            </xpath>
        </field>
    </record>
</odoo>