<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase_order_backdate_wizard_view_form" model="ir.ui.view">
        <field name="name">purchase.backdate.wizard.view</field>
        <field name="model">sh.purchase.backdate.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name = "purchase_order_ids" widget = "many2many_tags" invisible = "1"  />
                            <field name = "company_id" invisible = "1" />
                            <field name = "date_planned"/>
                            <field name = "remarks" attrs="{'invisible': [('is_remarks','=',False)],'required':[('is_remarks_mandatory','=',True),('is_boolean','=',True)]}"/>
                            <field name = "is_remarks" invisible = "1" />
                            <field name="is_remarks_mandatory" invisible = "1"/>
                            <field name = "is_boolean" invisible ="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button  string="Confirm"  name="assign_backdate" type="object" class="oe_highlight"  />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" icon="fa-remove" />
                </footer>
            </form>
        </field>
    </record>
</odoo>